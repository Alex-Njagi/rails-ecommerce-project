<h1>Checkout</h1>

<div class="checkout-container">
  <div class="checkout-card">
    <%= form_with model: @checkout, url: checkout_path, local: false, html: { id: "checkout-form" } do |f| %>

      <div class="checkout-section">
        <h3>Payment Information</h3>

        <div class="form-group">
          <%= f.label :paymentMethod, "Payment Method" %>
          <%= f.select :paymentMethod, [["Mobile Money", "mobile_money"], ["Pay on Delivery", "on_delivery"]],
                        {}, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :paymentNumber, "Payment Number" %>
          <%= f.text_field :paymentNumber, class: "form-control" %>
        </div>
      </div>

      <div class="checkout-section">
        <h3>Delivery Information</h3>

        <div class="form-group">
          <%= f.label :deliveryInformation_county, "County" %>
          <%= f.text_field :deliveryInformation_county,
              value: @checkout.deliveryInformation["county"], class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :deliveryInformation_city, "City" %>
          <%= f.text_field :deliveryInformation_city,
              value: @checkout.deliveryInformation["city"], class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :deliveryInformation_street, "Street" %>
          <%= f.text_field :deliveryInformation_street,
              value: @checkout.deliveryInformation["street"], class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :deliveryInformation_postalCode, "Postal Code" %>
          <%= f.text_field :deliveryInformation_postalCode,
              value: @checkout.deliveryInformation["postalCode"], class: "form-control" %>
        </div>
      </div>

      <div class="checkout-summary">
        <h3>Order Summary</h3>
        <p><strong>Cart Total:</strong> KSh <%= @checkout.cartTotal %></p>
        <p><strong>Delivery Fee:</strong> KSh 300</p>
        <p><strong>Total:</strong> KSh <%= @checkout.cartTotal + 300 %></p>
      </div>

      <div class="form-actions">
        <%= f.submit "Place Order", class: "btn-submit" %>
      </div>

    <% end %>
  </div>
</div>

<!-- Confirmation Popup -->
<div id="order-popup" class="popup-overlay hidden">
  <div class="popup-card">
    <h3 id="popup-title"></h3>
    <p id="popup-message"></p>
    <%= link_to "Back to Products", view_products_path, class: "btn-submit" %>
  </div>
</div>

<script>
  document.addEventListener("turbo:load", () => {
    const form = document.getElementById("checkout-form");
    const popup = document.getElementById("order-popup");
    const popupTitle = document.getElementById("popup-title");
    const popupMessage = document.getElementById("popup-message");

    if (form) {
      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        const formData = new FormData(form);
        const response = await fetch("<%= checkout_path %>", {
          method: "POST",
          headers: { "Accept": "application/json" },
          body: formData
        });

        if (response.ok) {
          const data = await response.json();
          popupTitle.textContent = `Order #${data.id} Received!`;
          popupMessage.textContent = `Your order will be fulfilled by ${data.deliveryDate}.`;
          popup.classList.remove("hidden");
        } else {
          alert("Something went wrong. Please try again.");
        }
      });
    }
  });
</script>

