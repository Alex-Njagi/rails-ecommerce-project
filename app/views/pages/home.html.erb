<style>
  /* Page background + layout */
  body {
    background: #f8f9fa; 
  }

  .landing-wrapper {
    max-width: 900px;
    margin: 60px auto;
    text-align: center;
    padding: 2rem;
    background: #ffffff;
    border-radius: 14px;
    box-shadow: 0 8px 30px rgba(0,0,0,0.05);
  }

  /* Main heading */
  h1 {
    font-family: 'Inter', sans-serif;
    font-size: 2.4rem;
    font-weight: 800;
    letter-spacing: -1px;
    color: #212529;
    margin-bottom: 1rem;
  }

  /* Subtitle */
  .subtext {
    font-size: 1.1rem;
    color: #6c757d;
    margin-bottom: 2rem;
  }

  /* CTA buttons */
  .landing-btn {
    display: inline-block;
    padding: 12px 22px;
    margin: 0.3rem;
    border-radius: 10px;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 600;
    transition: background .25s ease, transform .2s ease;
  }

  .btn-primary {
    background: #007bff;
    color: white;
  }
  .btn-primary:hover {
    background: #0069d9;
    transform: translateY(-3px);
  }

  .btn-outline {
    border: 2px solid #007bff;
    color: #007bff;
    background: transparent;
  }
  .btn-outline:hover {
    background: #007bff;
    color: white;
    transform: translateY(-3px);
  }
</style>

