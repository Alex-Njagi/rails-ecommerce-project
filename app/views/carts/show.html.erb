<h1>Your Cart</h1>

<% if @cart.cartItems.any? %>
  <div class="cart-grid">
    <% @cart.cartItems.each do |item| %>
      <% product = Product.find_by(id: item["productID"]) %>
      <% if product %>
        <div class="cart-card">
          <img src="<%= product.productImage %>" alt="<%= product.productName %>" />
          <div class="cart-details">
            <h3><%= product.productName %></h3>
            <p><strong>Category:</strong> <%= product.productCategory %></p>
            <p><strong>Quantity:</strong> <%= item["selectedQuantity"] %></p>
            <p><strong>Subtotal:</strong> KSh <%= item["productTotal"] %></p>
            <%= button_to "Remove Item", remove_cart_item_path(product.id), method: :delete, class: "remove-btn" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="cart-summary">
    <h2>Total: KSh <%= @cart.cartTotal %></h2>
  </div>
<% else %>
  <p>Your cart is empty.</p>
<% end %>

<style>
  h1 {
    margin-bottom: 20px;
  }

  button {
    cursor: pointer
  }

  .cart-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .cart-card {
    display: flex;
    background: #fff;
    border: 1px solid #ccc;
    border-radius: 10px;
    padding: 15px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    align-items: center;
  }

  .cart-card img {
    width: 120px;
    height: 120px;
    object-fit: cover;
    border-radius: 8px;
    margin-right: 15px;
  }

  .cart-details {
    flex: 1;
  }

  .cart-details h3 {
    margin: 0 0 5px;
  }

  .cart-details p {
    margin: 4px 0;
  }

  .remove-btn {
    background-color: #c0392b;
    color: white;
    border: none;
    padding: 8px 12px;
    border-radius: 5px;
    cursor: pointer;
    margin-top: 10px;
  }

  .remove-btn:hover {
    background-color: #a93226;
  }

  .cart-summary {
    margin-top: 30px;
    text-align: right;
  }
</style>
