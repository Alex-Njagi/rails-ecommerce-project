<h1>Your Cart</h1>

<% if @cart.cartItems.any? %>
  <div class="cart-grid">
    <% @cart.cartItems.each do |item| %>
      <% product = Product.find_by(id: item["productID"]) %>
      <% if product %>
        <div class="cart-card">
          <img src="<%= product.productImage %>" alt="<%= product.productName %>" />
          <div class="cart-details">
            <h3><%= product.productName %></h3>
            <p><strong>Category:</strong> <%= product.productCategory %></p>
            <p><strong>Quantity:</strong> <%= item["selectedQuantity"] %></p>
            <p><strong>Subtotal:</strong> KSh <%= item["productTotal"] %></p>
            <%= button_to "Remove Item", remove_cart_item_path(product.id), method: :delete, class: "remove-btn" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="cart-summary">
    <h2>Total: KSh <%= @cart.cartTotal %></h2>
    <%= link_to "Proceed to Checkout", checkout_path, style: "margin-right:10px;" %>
  </div>
<% else %>
  <p>Your cart is empty.</p>
<% end %>

<style>
  h1 {
    margin-bottom: 25px;
    text-align: center;
    font-size: 32px;
    font-weight: bold;
  }

  button {
    cursor: pointer
  }

  .cart-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit,minmax(320px, 1fr));
    gap: 25px;
    padding: 20px 0;
  }

  .cart-card {
    display: flex;
    background: #ffffff;
    border: 1px solid #ddd;
    border-radius: 14px;
    padding: 18px;
    box-shadow: 0 6px 20px rgba(2,6,23,0.06);
    transition: transform 0.18s ease, box-shadow 0.18s ease;
    align-items: center;
  }
  .cart-card:hover{
    transform: translateY(-6px);
    box-shadow: 0 10px 30px rgba(2,6,23,0.08);
  }

  .cart-card img {
    width: 130px;
    height: 130px;
    object-fit: cover;
    border-radius: 10px;
    margin-right: 18px;
    backgroung: #fafafa;
  }

  .cart-details {
    flex: 1;
  }

  .cart-details h3 {
    margin: 0 0 8px;
    font-size: 20px;
    font-weight: bold;
    color: #111;
  }

  .cart-details p {
    margin: 6px 0;
    font-size: 15px;
    line-height: 1.45;
    color: #111;
  }

  .card-details p{
    margin: 0 0 8px;
    font-size: 20px;
    font-weight: 700;
    color: #444;
  }
  .remove-btn {
    display: inline-block;
    background-color: #e74c3c;
    color: white;
    border: none;
    padding: 8px 14px;
    border-radius: 8px;
    cursor: pointer;
    margin-top: 12px;
    font-size: 14px;
    transition: background-color .14s ease, transform .08s ease;
  }

  .remove-btn:hover,
  .remove-btn:focus {
    background-color: #c0392b;
    transform: translateY(-2px);
    outline: none;
  }

  .cart-summary {
    margin-top: 35px;
    padding: 15px 12px;
    text-align: right;
  }

   .cart-summary h2 {
    font-size: 26px;
    margin-bottom: 12px;
    color: #111;
  }

  .checkout-link {
    display: inline-block;
    background: linear-gradient(180deg, #007bff,#0069d9);
    color: #fff;
    padding: 12px 20px;
    border-radius: 10px;
    text-decoration: none;
    font-size: 17px;
    font-weight: 700;
    box-shadow: 0 6px 18px rgba(2,6,23,0.08);
    transition: transform .12s ease, box-shadow .12s ease, opacity .12s ease;
    margin-left: 8px;
  }

  .checkout-link:hover ,
  .checkout-link:focus {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(2,6,23,0.12);
    opacity: 0.98;
    outline: none;
}

  p {
    text-align: center;
    font-size: 18px;
    margin-top: 30px;
  }
 
</style>
